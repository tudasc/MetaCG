@LIT_SITE_CFG_IN_HEADER@

import os
import lit.util

config.filecheck_exe = "@FILECHECK_EXE@"
config.binary_dir = "@CMAKE_BINARY_DIR@"
config.cppargs = "@TEST_CPP_ARGS@"
config.cgpatch_exe = "@CGPATCHCXX_EXE@"
config.split_file_exe = "@SPLIT_FILE_EXE@"

# Let the main config do the real work.
config.loaded_site_config = True
lit_config.load_config(config, "@CMAKE_CURRENT_SOURCE_DIR@/lit.cfg")

# Set individual build execution roots to enable parallel testing
config.test_exec_root = os.path.join("@CMAKE_BINARY_DIR@", "lit-output")

# Ensure the directory exists
lit.util.mkdir_p(config.test_exec_root)
